extends dashboard
block dashboard
    h3 New blog post
    .col-sm-10.col-sm-offset-1
        form(action='' method='POST' enctype='multipart/form-data')
            if(errors)
                each error in errors
                    li.text-danger(style='font-size:20px;')=error.msg
            .form-group
                input.form-control(type='text', name='title', required placeholder="Blog Post Title")
            .form-group
                input.form-control(type='text', name='author', required placeholder="Author")
            .form-group
                input.form-control(type='text', name='txt', required placeholder="Blog post")
            .form-group
                label Date
                input.form-control(type='Date', name='date', required placeholder="Date")
            .form-group
                span Cover photo
                input.form-control(type='file', name='imgSrc', required placeholder="")
                span Author Image
                input.form-control(type='file', name='imgSrc', required placeholder="")
            .form-group
                input.btn.btn-primary(type='submit', name='submit-post')

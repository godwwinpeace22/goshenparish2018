extends portal
block portal
	.error_messages(style='width:80%;padding-left:15px;padding-right:15px;margin:auto;')
		p#print!= messages()
		if errors
			ul.error
				for error in errors
					li!= error.msg
	.createacc(style='padding-bottom:38px;color:#999;')
		
		h3 #{title}
		
			p=errors
		form(method='POST', action='' autocomplete="you")
			.form-group
				label Name
				input.form-control(name='name', type='text',value=user? user.name :''  placeholder='Enter name', required )
			.form-group
				label Username or Phone
				input.form-control(name='username', type='text', value=user? user.username :'' placeholder='Enter username', required)
			.form-group
				label Pin
				input.form-control(name='pin', type='text', placeholder='Enter pin', required)
			.form-group
				label Password
				input.form-control(name='password', type='password', placeholder='Enter password', required)
			.form-group
				label Confirm Password
				input.form-control(name='password2', type='password', placeholder='Confirm password', required)
			.form-group
				input.btn.btn-primary(name='register', type='submit')
				a(href="/portal" style='margin-left:10px') Or Login